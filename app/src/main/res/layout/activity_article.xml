<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12sp"
    tools:context=".view.ArticleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewPublishedAt2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published at "
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/textViewSourceName2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/textViewAuthor2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="right"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textViewDescription2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/picture"/>
        <TextView
            android:id="@+id/textViewContent2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Content"/>
        <TextView
            android:id="@+id/textViewUrl2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#3F51B5"
            android:text="Go to original article"/>



    </LinearLayout>



</androidx.core.widget.NestedScrollView>